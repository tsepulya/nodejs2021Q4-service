{
    "compilerOptions": {
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "allowJs": true,
      "lib": ["es5", "es6", "dom"],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true
    },
    "include": ["src"]
}